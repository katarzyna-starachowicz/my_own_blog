.post_wrapper
  %h1.title
    = post.title
  %p.date.on_show_page
    published: #{time_ago_in_words(post.created_at)} ago
  %p.date
    = link_to 'Back to all posts', posts_path
  - if admin_signed_in?
    %p.date
      = link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }
      = link_to 'Edit', edit_post_path(post)
  .body
    = post.body.html_safe

